{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "lib": [
            "es6",
            "dom",
            "es2015.iterable"
        ],
        "baseUrl": ".",
        "paths": {
            "*": [
                "./node_modules/tns-core-modules/*"
            ]
        },
        "types": [
            "@types/datejs"
        ]
    },
    "exclude": [
        "./webpack.config.js",
        "./app/shared/date.js",
        "./app/shared/packet/packet.js",
        "./app/shared/packet/packet_bindings.js",
        "node_modules",
	"hooks",
        "platforms",
        "**/*.aot.ts"
    ]
}
