<Page xmlns="http://www.nativescript.org/tns.xsd"
      xmlns:chart="nativescript-pro-ui/chart"
      xmlns:gauge="nativescript-pro-ui/gauges"
      loaded="pageLoaded" 
      navigatingFrom="onNavigatingFrom">
    <ActionBar class="action-bar">
        <ActionItem text="Back"
            tap="onBackTap"
            ios.position="right">
        </ActionItem>
        <Label class="action-bar-title" text="{{ name }}"></Label>
    </ActionBar>
    <StackLayout orientation="vertical">
        <StackLayout horizontalAlignment="center" orientation="horizontal" class="tab-content">
            <Button id="connection" tap="onConnectionTap" class="button button-positive" />
            <Button text="Send Settings" tap="onSettingsTap" class="button button-positive" />
        </StackLayout>
        <chart:RadCartesianChart id="cartesianChart">
            <chart:RadCartesianChart.series>
                <chart:LineSeries items="currentSpeedData" categoryProperty="timeStamp" valueProperty="Amount">
                    <chart:LineSeries.horizontalAxis>
                        <chart:DateTimeContinuousAxis minimum="01/12/2014" maximum="01/10/2015" majorStep="Month" dateFormat="MMM-dd" labelFitMode="Rotate" labelRotationAngle="1.2"/>
                    </chart:LineSeries.horizontalAxis>
                    <chart:LineSeries.verticalAxis>
                        <chart:LinearAxis/>
                    </chart:LineSeries.verticalAxis>
                </chart:LineSeries>
            </chart:RadCartesianChart.series>
        </chart:RadCartesianChart>
