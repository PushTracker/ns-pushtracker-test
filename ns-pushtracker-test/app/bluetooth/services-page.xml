<Page xmlns="http://www.nativescript.org/tns.xsd"
      xmlns:gauge="nativescript-pro-ui/gauges"
      loaded="pageLoaded" 
      navigatingFrom="onNavigatingFrom">
    <ActionBar class="action-bar">
        <ActionItem text="Back"
            tap="onBackTap"
            ios.position="right">
        </ActionItem>
        <Label class="action-bar-title" text="Services"></Label>
    </ActionBar>
    
    <StackLayout orientation="vertical">
        <StackLayout orientation="horizontal" class="tab-content">
            <Button id="connection" tap="onConnectionTap" class="button button-positive" />
            <Button text="Send Settings" tap="onSettingsTap" class="button button-positive" />
        </StackLayout>
        <gauge:RadRadialGauge id="gaugeView" row="0" rowSpan="2" title="Current Speed" tap="onTapTap">
            <gauge:RadRadialGauge.titleStyle>
                <gauge:TitleStyle textColor="black" ios:verticalOffset="20" android:verticalOffset="75"/>
            </gauge:RadRadialGauge.titleStyle>
            <!-- >> gauges-scales-add-scales -->
            <gauge:RadRadialGauge.scales>
                <gauge:RadialScale minimum="0.0" maximum="6.0" radius="0.7">
                    <gauge:RadialScale.scaleStyle>
                        <gauge:ScaleStyle majorTicksCount="7" minorTicksCount="20" lineThickness="2" labelsOffset="0.1" lineColor="gray" labelsCount="7" ticksOffset="0"
                        labelsLayoutMode="Outer" ticksLayoutMode="Outer" />
                    </gauge:RadialScale.scaleStyle>
                    <!-- >> gauges-scales-add-indicators -->
                    <gauge:RadialScale.indicators>
                        <gauge:RadialBarIndicator minimum="0" maximum="3.5" location="0.69">
                            <gauge:RadialBarIndicator.indicatorStyle>
                                <gauge:BarIndicatorStyle fillColor="green" barWidth="0.08"/>
                            </gauge:RadialBarIndicator.indicatorStyle>
                        </gauge:RadialBarIndicator>
                        <gauge:RadialBarIndicator minimum="3.5" maximum="4.5" location="0.69">
                            <gauge:RadialBarIndicator.indicatorStyle>
                                <gauge:BarIndicatorStyle fillColor="yellow" barWidth="0.08"/>
                            </gauge:RadialBarIndicator.indicatorStyle>
                        </gauge:RadialBarIndicator>
                        <gauge:RadialBarIndicator minimum="4.5" maximum="6.0" location="0.69">
                            <gauge:RadialBarIndicator.indicatorStyle>
                                <gauge:BarIndicatorStyle fillColor="red" barWidth="0.08"/>
                            </gauge:RadialBarIndicator.indicatorStyle>
                        </gauge:RadialBarIndicator>
                        <gauge:RadialNeedle id="speedNeedle" value="{{ currentSpeed }}">
                            <gauge:RadialNeedle.needleStyle>
                                <gauge:NeedleStyle length="0.5" android:topWidth="8" ios:topWidth="3" android:bottomWidth="8" ios:bottomWidth="3"/>
                            </gauge:RadialNeedle.needleStyle>
                        </gauge:RadialNeedle>
                    </gauge:RadialScale.indicators>
                    <!-- << gauges-scales-add-indicators -->
                </gauge:RadialScale>
            </gauge:RadRadialGauge.scales>
        </gauge:RadRadialGauge>
    </StackLayout>

</Page>